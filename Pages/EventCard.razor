@page "/eventcard"
@using EventEase.Models

<h3>Event Card</h3>

<EditForm Model="@eventDetails" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="eventName">Event Name</label>
        <InputText id="eventName" class="form-control" @bind-Value="eventDetails.Name" />
    </div>
    <div class="form-group">
        <label for="eventDate">Event Date</label>
        <InputDate id="eventDate" class="form-control" @bind-Value="eventDetails.Date" />
    </div>
    <div class="form-group">
        <label for="eventDescription">Description</label>
        <InputTextArea id="eventDescription" class="form-control" @bind-Value="eventDetails.Description" />
    </div>
    <button type="submit" class="btn btn-primary">Save Event</button>
</EditForm>

@code {
    private Event eventDetails = new Event();

    private void HandleSubmit()
    {
        Console.WriteLine($"Event {eventDetails.Name} saved!");
        // Additional logic to handle the event details (e.g., saving to a database)
    }

    public class Event
    {
        public string Name { get; set; }
        public DateTime Date { get; set; }
        public string Description { get; set; }
    }
}
